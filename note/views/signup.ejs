<%include ./includes/header.ejs %>
<section class="myform-area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="form-area login-form">
                    <div class="form-content">
                        <h2>MY BOARD</h2>
                        <p>First Node.js project in Seoul Digitech high school</p>
                        <ul>
                            <li style="width: 100%;text-align: center;margin: 0px;"><a href="/users/kakao" class="kakao"><i class="fa"></i><span>with Kakao <img src="/images/kakao.png" alt=""></span></a></li>
                        </ul>
                    </div>
                    <div class="form-input">
                        <h2>SIGNUP</h2>
                        <form action="/users/signup" method="POST">
                            <div class="form-group">
                                <input type="text" name="id" required>
                                <label>ID</label>
                            </div>
                            <div class="form-group">
                                <input type="password" name="password" required>
                                <label>PASSWORD</label>
                            </div>
                            <div class="form-group">
                                <input type="text" name="name" required>
                                <label>NAME</label>
                            </div>
                            <div class="form-group">
                                <input type="email" name="email" required>
                                <label>E-MAIL</label>
                            </div>
                            <div class="form-group">
                                <input type="text" name="address" required>
                                <label>ADDRESS</label>
                            </div>
                            <div class="myform-button">
                                <button type="submit" class="myform-btn">Sign up</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<%include ./includes/footer.ejs %>